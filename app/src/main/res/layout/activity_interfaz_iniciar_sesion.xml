<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_interfaz_iniciar_sesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2D6EF"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_corners_bg"
            android:backgroundTint="#D8E1FA"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:gravity="center"
                android:rotation="0"
                android:text="¡BIENVENIDO!"
                android:textColor="#3F51B5"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNameUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Nombre de usuario"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#787878" />

            <EditText
                android:id="@+id/editTextCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Correo"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#787878" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="5sp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#787878" />

            <EditText
                android:id="@+id/editTextConfPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="5sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/rounded_edittext_background"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#787878" />

            <Button
                android:id="@+id/buttonInicSes"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30sp"
                android:backgroundTint="#517EEF"
                android:text="INICIAR SESION"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="30sp" />

            <Button
                android:id="@+id/buttonCrearUser"
                android:layout_width="match_parent"
                android:layout_height="52sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:backgroundTint="#4A71D1"
                android:text="CREAR CUENTA"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:cornerRadius="30sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_mensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Si aún no te registras, crea una cuenta."
            android:textColor="#373131"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>