<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/misMensajes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="30sp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="-10sp"
            android:background="?android:attr/fastScrollPreviewBackgroundRight"
            android:backgroundTint="#7389fe"
            android:foregroundGravity="right"
            android:gravity="right|end"
            android:orientation="vertical"
            android:paddingTop="6sp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:maxLines="10"
                android:padding="4dp"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="8sp"
                android:paddingBottom="8sp"
                android:text="00:00m"
                android:textColor="#FFFFFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lasRespuestas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="-10sp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="30sp"
            android:background="?android:attr/fastScrollPreviewBackgroundLeft"
            android:backgroundTint="#f1f1fa"
            android:foregroundGravity="left"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingTop="6sp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:maxLines="10"
                android:padding="4dp"
                android:text="TextView"
                android:textColor="#69697d"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingRight="8sp"
                android:paddingBottom="8sp"
                android:text="00:00m"
                android:textColor="#69697d"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>